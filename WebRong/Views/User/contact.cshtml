@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .map_container {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .map {
        width: 100%;
        max-width: 800px; /* Giới hạn chiều rộng tối đa */
        height: 400px; /* Chiều cao mặc định */
        border-radius: 12px; /* Bo góc mềm mại */
        overflow: hidden;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Bóng đổ nhẹ */
        transition: transform 0.3s ease-in-out;
    }

        .map:hover {
            transform: scale(1.02); /* Hiệu ứng zoom nhẹ khi hover */
        }

        /* Định dạng iframe bên trong bản đồ */
        .map iframe {
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 12px;
        }

    /* Responsive cho điện thoại */

    .map{
        height: 300px; /* Giảm chiều cao để vừa với màn hình nhỏ */
    }
    .map{
        height: 250px; /* Chiều cao nhỏ hơn cho điện thoại bé */
    }


</style>
<section class="contact_section layout_padding">
    <div class="container-fluid">
        
        <div class="row">
            <div class="col-lg-7 col-md-6 px-0">
                <div class="map_container">
                    <div class="map">

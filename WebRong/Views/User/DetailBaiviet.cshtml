                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="content-baiviet" style="padding: 0 100px;">
        <div class="row">
            <!-- Cột 8 chứa nội dung chính -->
            <div class="col-md-8">
                <h3>@ViewBag.Baiviet.TenBaiviet</h3>
                <div class="date-container">
                    <i class="fas fa-calendar"> @ViewBag.Baiviet.Ngaytao.ToString("dd/MM/yyyy HH:mm")</i>
                </div>

                @if (Model == null)
                {
                    <p>Bài viết không tồn tại.</p>
                }
                else
                {
                    <div>
                        @foreach (var item in Model)
                        {
                            if (item.Contains("hinhanh:"))
                            {
                                var imageFileName = item.Substring(item.IndexOf("hinhanh:") + "hinhanh:".Length).Trim();
                                var image = Url.Content("~/content/images/" + imageFileName);
                                <img src=@image alt="">
                            }
                            else
                            {
                                <p class="formatted-text">@item</p>
                            }
                        }
                    </div>
                }
            </div>


            <!-- Cột 2 chứa nội dung khác -->
            <div class="col-md-4">
                <h4>BÀI VIẾT LIÊN QUAN</h4>
                <hr>
                <div class="related-posts">
                    @foreach (var post in ViewBag.AllBaiviet)
                    {
                        var image = Url.Content("~/content/images/" + post.ImageIndex);
                        <div class="related-post">
                            <a href="#">
                                <img src=@image class="related-post-img">
                                <div class="related-post-text">
                                    <p class="related-post-title">@post.TenBaiviet</p>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


    <!-- Info Section -->
    <div class="info_section">
        <div class="container">
            <div class="contact_nav">
                <a href="">
                    <i class="fa fa-phone" aria-hidden="true"></i>
                    <span>
                        0961.345.247
                    </span>
                </a>
                <a href="">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                    <span>
                        ThieuNguyen@gmail.com
                    </span>
                </a>
                <a href="">
                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                    <span>
                        247 Đồng Nai
                    </span>
                </a>
            </div>

            <div class="info_top">
                <div class="row info_main_row">
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="info_links">
                            <h4>LIÊN KẾT NHANH</h4>
                            <div class="info_links_menu">
                                <a href="http://localhost:5296/">TRANG CHỦ</a>
                                <a href="http://localhost:5296/User/service">DỊCH VỤ</a>
                                <a href="http://localhost:5296/User/about">GIỚI THIỆU</a>
                                <a href="http://localhost:5296/User/project">TIN TỨC</a>

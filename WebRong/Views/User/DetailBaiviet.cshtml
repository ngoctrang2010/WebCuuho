        <div class="header_bottom">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" href="/">
                        <img src="~/content/images/logoa.jpg" alt="Logo" style="height: 54px; width: auto;">
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item @(Context.Request.Path == "/" ? "active" : "")">
                                <a class="nav-link" href="/">TRANG CHỦ</a>
                            </li>
                            <li class="nav-item @(Context.Request.Path == "/User/service" ? "active" : "")">
                                <a class="nav-link" href="/User/service">DỊCH VỤ</a>
                            </li>
                            <li class="nav-item @(Context.Request.Path == "/User/about" ? "active" : "")">
                                <a class="nav-link" href="/User/about">GIỚI THIỆU</a>
                            </li>
